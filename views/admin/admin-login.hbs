<link rel="stylesheet" type="text/css" href="/stylesheets/adminlogin.css">
<div class="mainLogin">
    <div class="container" style="opacity: 80%;">
        <div class="login">
            <div class="row lgn">
                <div class="col-md img">
                    {{!-- <img src="https://t4.ftcdn.net/jpg/04/60/71/01/360_F_460710131_YkD6NsivdyYsHupNvO3Y8MPEwxTAhORh.jpg"> --}}
                </div>
                <div class="col-md">
                    <form class="login-form" style="opacity: 100%" action="/admin/admin-login" method="POST" onsubmit="return validateForm()">
                        <h4>Admin Login</h4>
                        <div class="form-group">
                            <input class="form-control user" name="email" id="email" type="text" placeholder="Email">
                            <i class="fa ic fa-envelope" aria-hidden="true"></i>
                            <div id="emailerror" style="color: red;"></div>
                        </div>
                        <div class="form-group">
                            <input class="form-control pass" name="password" id="password" type="password" placeholder="Password" autocomplete="new-password">
                            <i class="fa ic fa-lock" aria-hidden="true"></i>
                            <div id="passworderror" style="color: red;"></div>
                        </div>
                        <input class="btn btn-light btn-block" type="submit" value="Login">
                        {{!-- <span class="forget">Forget<a href="#"> User Name</a> / <a href="#">Password</a>?</span> --}}
                        {{!-- <span class="New-Account"><a href="#">Create New Account <i class="fa fa-long-arrow-right" aria-hidden="true"></i></a></span> --}}
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>
<script src="/javascripts/adminlogin.js"></script>
<script>
    function validateForm() {
        // Reset error messages
        document.getElementById("emailerror").textContent = "";
        {{!-- document.getElementById("passworderror").textContent = ""; --}}

        // Get form input values
        var email = document.getElementById("email").value.trim();
        {{!-- var password = document.getElementById("password").value; --}}

        // Email validation
        var emailPattern = /^[A-Z0-9._%+-]+@[A-Z0-9.-]+\.[A-Z]{2,}$/i;
        if (!emailPattern.test(email)) {
            document.getElementById("emailerror").textContent = "Please enter a valid email address.";
            return false;
        }

        // Password validation (customize as needed)
       {{!-- if (password.length < 3 || password.length > 8) {
            document.getElementById("passworderror").textContent = "Password must be between 3 and 8 characters.";
            return false;
        } --}}

        return true; // Form submission allowed if all validations pass
    }
</script>
