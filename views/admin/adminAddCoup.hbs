				<script>
					function validateCouponForm() {
						// Validate Coupon Code
						var couponCode = document.getElementById("couponCode").value;
						var couponNameError = document.getElementById("couponNameError");
						if (couponCode.trim() === "") {
							couponNameError.textContent = "Coupon code cannot be empty.";
							return false;
						}

						var regex = /^[a-zA-Z0-9]+$/;
						if (!regex.test(couponCode)) {
							couponNameError.textContent = "Only alphanumeric characters are allowed.";
							return false;
						}
						couponNameError.textContent = "";

						// Validate Description
						var couponDescription = document.getElementById("couponDescription").value;
						var couponDescriptionError = document.getElementById("couponDescriptionError");
						if (couponDescription.trim() === "") {
							couponDescriptionError.textContent = "Description cannot be empty.";
							return false;
						}
						couponDescriptionError.textContent = "";

						// Validate Discount
						var discount = document.getElementById("simpleinput").value;
						var discountError = document.getElementById("discountError");
						if (discount.trim() === "" || isNaN(discount) || parseFloat(discount) < 0) {
							discountError.textContent = "Please enter a valid non-negative discount.";
							return false;
						}
						discountError.textContent = "";

						// Validate Max Discount
						var maxDiscount = document.getElementById("maxDiscount").value;
						var maximumDiscountError = document.getElementById("maximumDiscountError");
						if (maxDiscount.trim() === "" || isNaN(maxDiscount) || parseFloat(maxDiscount) < 0) {
							maximumDiscountError.textContent = "Please enter a valid non-negative max discount.";
							return false;
						}
						maximumDiscountError.textContent = "";

						// Validate Min Amount
						var minAmount = document.getElementById("minAmount").value;
						var minAmountError = document.getElementById("minAmountError");
						if (minAmount.trim() === "" || isNaN(minAmount) || parseFloat(minAmount) < 0) {
							minAmountError.textContent = "Please enter a valid non-negative min amount.";
							return false;
						}
						minAmountError.textContent = "";

						// Validate Expiration Date (if needed)
						var expirationDate = document.getElementById("expirationDate").value;
						// You can add a validation for the expiration date if needed.

						return true;
					}
