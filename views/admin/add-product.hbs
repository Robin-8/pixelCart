<script>
    function validateForm() {
        // Reset error messages
        document.getElementById('nameError').textContent = '';
        document.getElementById('descriptionError').textContent = '';

        // Get the values from the form
        const productName = document.getElementById('product_name').value;
        const productDescription = document.getElementById('product_description').value;

        const maxProductNameLength = 20; 
        const maxProductDescriptionLength = 20;

        // Check for spaces or empty product name
        if (productName.trim() === '') {
            document.getElementById('nameError').textContent = 'Product title cannot be empty.';
            return false; // Prevent form submission
        }

        if (productName.length > maxProductNameLength) {
            document.getElementById('nameError').textContent = 'Product title is too long.';
            return false; // Prevent form submission
        }

        if (productDescription.trim() === '') {
            document.getElementById('descriptionError').textContent = 'Product description cannot be empty.';
            return false; // Prevent form submission
        }

        // Split the input value into words and check the length
        const descriptionWords = productDescription.trim().split(/\s+/);
        if (descriptionWords.length > 20) {
            document.getElementById('descriptionError').textContent = 'Product description can have a maximum of 20 words.';
            return false; // Prevent form submission
        }

        if (productDescription.length > maxProductDescriptionLength) {
            document.getElementById('descriptionError').textContent = 'Product description is too long.';
            return false; // Prevent form submission
        }

        return true; // Allow form submission if all validations pass
    }
</script>
