                            <h3>64GB</h3>
                            <p>$999</p>
                        </a>
                       
                       
                    </div>
                    <button class="sp-primary-button">
                        Add To Cart <i class="fas fa-shopping-bag"></i>
                    </button>
                    <button class="sp-primary-button">
                        Buy Now
                    </button>
                </div>

            </section>
