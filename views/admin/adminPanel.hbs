<section>

    <div class="container">
      <div class="row mt-5">
        <a href="/admin/add-product" class="btn btn-success  ">Add Product</a>
        <a href="/admin/logout" class="btn btn-danger ml-auto ">LOGOUT</a>
      </div>
 <table class="table table-striped mt-5">
  <thead>
    <tr>
      {{!-- <th scope="col">Product ID</th> --}}
      <th scope="col">Title</th>
       <th scope="col">
        <div class="dropdown">
          <button class="btn  dropdown-toggle" type="button" id="categoryDropdown" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
            Category
          </button>
          <div class="dropdown-menu" aria-labelledby="categoryDropdown">
            <a class="dropdown-item" href="/admin/Cameracategory">Camera</a>
            <a class="dropdown-item" href="/admin/ActionCameracategory">ActionCamera</a>
            <a class="dropdown-item" href="/admin/SurveillanceCameracategory">SurveillanceCamera</a>
            {{!-- <a class="dropdown-item" href="/admin/jewellerycategory">SurveillanceCamera</a> --}}
            <!-- Add more categories as needed -->
          </div>
        </div>
      </th>
      <th scope="col">Description</th>
      <th>Delete Status</th>
      <th scope="col">Price</th>
      <th>Image</th>
      <th>Actions</th>
    </tr>
  </thead>
  <tbody>
   {{#each products}}
        <tr>
          <td>{{this.Name}}</td>
          <td>{{this.Category}}</td>
          <td>{{this.Description}}</td>
          <td>{{this.Deleted}}</td>
          <td>{{this.Price}}</td>
        
   
          
          <td>
            <!-- Display the individual product image -->
            <img style="width:50px;height:50px" src="/product-images/{{this.Images.[0]}}" alt="{{this.Name}} Image">
          </td>
          
          <td>
            <!-- Edit and Delete buttons -->
            <a href="/admin/admineditproduct?productId={{this._id}}" class="btn btn-primary btn-sm btn-block">Edit</a>
            <a href='/admin/admindeleteproduct?productId={{this._id}}' class="btn btn-danger btn-sm btn-block" onclick="return confirm('Confirm to delete Product {{this.Name}}')">Delete</a>
          </td>
        </tr>
        {{/each}}
      </tbody>
    </table>
  </div>
