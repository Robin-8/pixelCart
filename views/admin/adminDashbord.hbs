	<script src="https://cdnjs.cloudflare.com/ajax/libs/Chart.js/2.9.4/Chart.min.js"></script>
	<script>
		const xValues = ["jan", "feb", "mar", "apr", "may", "june", "july", 'aug', "sep", "oct", "nov", "dec"];
		const monthlySalesArray = JSON.parse('{{monthlySalesArrayJSON}}');


		document.addEventListener('DOMContentLoaded', function () {

			new Chart("myChart", {
				type: "line",
				data: {
					labels: xValues,
					datasets: [{
						data: monthlySalesArray,
						borderColor: "red",
						fill: false
					}]
				},
				options: {
					legend: { display: false }
				}
			});
		});

		const codCount = JSON.parse('{{paymentBar}}');



		const xValues2 = ["COD", "ONLINE",];
		const yValues2 = codCount;
		const barColors2 = ["red", "green", 'white'];


		new Chart("myChart-2", {
			type: "bar",
			data: {
				labels: xValues2,
				datasets: [{
					backgroundColor: barColors2,
					data: yValues2
				}]
			},
			options: {
				legend: { display: false },
				title: {
					display: true,
